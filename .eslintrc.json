{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": ["/archive/**/*.ts"],
    "rules": {
        "semi": [
            "warn",
            "always"
        ],
        "lines-around-comment": [
            "error",
            {
                "beforeLineComment": true
            }
        ],
        "@typescript-eslint/no-explicit-any": "off"
    }
}